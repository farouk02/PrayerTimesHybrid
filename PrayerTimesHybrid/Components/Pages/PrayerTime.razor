<div class="prayer-time">
    <div class="prayer-name">@PrayerName</div>
    <div class="prayer-value">@PrayerValue</div>
</div>

@code {
    [Parameter]
    public string PrayerName { get; set; }

    [Parameter]
    public string PrayerValue { get; set; }
}

<style>
    .prayer-time {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        flex-grow: 1; /* Allow items to grow to fill available space */
        flex-basis: 0; /* Distribute space evenly */
        min-width: 100px; /* Minimum width to prevent collapsing */
    }

    .prayer-name {
        font-weight: bold;
        white-space: nowrap; /* Prevent names from wrapping */
    }

    .prayer-value {
        white-space: nowrap; /* Prevent values from wrapping */
    }
</style>