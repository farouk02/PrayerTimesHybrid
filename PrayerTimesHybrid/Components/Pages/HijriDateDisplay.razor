<div class="hijri-date">@GetArabicDate(DateTime.Today)</div>

@code {
    private string GetArabicDate(DateTime date)
    {
        CultureInfo arSA = new CultureInfo("ar-SA"); // Or another relevant Arabic culture
        return date.ToString("dd MMMM yyyy", arSA);
    }
}

