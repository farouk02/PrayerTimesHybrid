@inherits LayoutComponentBase
@using PrayerTimesHybrid.Components.Pages

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <div class="date">@GetArabicDate(DateTime.Today)</div>
            <div class="adhkar">Adhkar</div>
            <HijriDateDisplay />
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private string GetArabicDate(DateTime date)
    {
        CultureInfo arSA = new CultureInfo("ar-DZ"); // Or another relevant Arabic culture
        return date.ToString("dd MMMM yyyy", arSA);
    }
}